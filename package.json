{
  "version": "1.0.6",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "homepage": "http://umerbhat.github.io/react-battery-gauge",
  "keywords": [
    "battery",
    "react",
    "gauge",
    "SVG battery",
    "battery status",
    "battery meter",
    "battery gauge",
    "battery cells"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Umerbhat/react-battery-gauge.git"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint src ./src/index",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "export SET NODE_OPTIONS=--openssl-legacy-provider && start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "chromatic": "npx chromatic --project-token=${CHROMATIC_PROJECT_TOKEN}",
    "predeploy": "yarn build && cd example && yarn build",
    "deploy": "cd example && gh-pages -d dist"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ]
  },
  "name": "react-battery-gauge",
  "author": "Umer Bhat",
  "module": "dist/react-battery-gauge.esm.js",
  "size-limit": [
    {
      "path": "dist/react-battery-gauge.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-battery-gauge.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@size-limit/preset-small-lib": "^6.0.4",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addons": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "babel-loader": "^8.2.3",
    "chromatic": "^6.3.3",
    "eslint-plugin-prettier": "^4.0.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "size-limit": "^6.0.4",
    "storybook-readme": "^5.0.9",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  }
}
